{
    "$schema": "https://zeann3th.github.io/havoc/schemas/v0.1/config.json",
    "metadata": {
        "name": "gateway",
        "description": "A simple gateway configuration example",
        "version": "1.0.0",
        "author": "Zeann3th"
    },
    "spec": {
        "host": "127.0.0.1",
        "port": 50050,
        "services": [
            {
                "name": "Auth",
                "proto": "./examples/proto/auth.proto",
                "url": "http://localhost:50051",
                "endpoints": [
                    {
                        "rpc": "Login",
                        "method": "POST",
                        "path": "/sign-in",
                        "request": {
                            "type": "LoginRequest"
                        },
                        "response": {
                            "type": "LoginResponse",
                            "cookies": [
                                {
                                    "name": "refresh_token",
                                    "options": {
                                        "httpOnly": true,
                                        "secure": true,
                                        "sameSite": "Strict",
                                        "maxAge": 3600,
                                        "path": "/",
                                        "domain": "example.com",
                                        "partitioned": true
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "rpc": "Register",
                        "method": "POST",
                        "path": "/sign-up",
                        "request": {
                            "type": "RegisterRequest"
                        },
                        "response": {
                            "type": "RegisterResponse"
                        }
                    }
                ]
            }
        ]
    }
}